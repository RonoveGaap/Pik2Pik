<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CreateGroupFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_create_group_guideline_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_create_group_guideline_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_create_group_guideline_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_create_group_guideline_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_create_group_guideline_vertical_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_create_group_guideline_vertical_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_create_group_guideline_vertical_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06"/>


    <ImageView
        android:id="@+id/create_group_button_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/fragment_create_group_guideline_4"
        app:layout_constraintBottom_toBottomOf="@id/fragment_create_group_guideline_4"
        app:layout_constraintLeft_toLeftOf="@id/fragment_create_group_guideline_vertical_3"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintDimensionRatio="1:0.7"
        android:src="@drawable/back_arrow"
        />

    <TextView
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New group"
        app:layout_constraintBottom_toBottomOf="@id/fragment_create_group_guideline_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/fragment_create_group_guideline_1" />

<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintBottom_toTopOf="@id/create_group_name_edittext"-->
<!--        android:text="@string/create_group_name_label"-->
<!--        android:textSize="18sp"-->
<!--        android:textColor="@color/black"-->
<!--        app:layout_constraintLeft_toLeftOf="@id/create_group_name_edittext"/>-->

    <EditText
        android:id="@+id/create_group_name_edittext"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border_radius_white_rectangle"
        android:fontFamily="@font/montserrat_regular"
        android:hint="@string/create_group_name_hint"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_create_group_guideline_2"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/fragment_create_group_guideline_2"
        app:layout_constraintWidth_percent="0.6" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/create_group_button_next"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/fragment_create_group_guideline_3"
        app:layout_constraintBottom_toBottomOf="@id/fragment_create_group_guideline_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.1"
        android:background="@drawable/green_ripple"
        android:text="Unirse">

        <TextView
            android:id="@+id/create_group_button_next_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center_vertical|center_horizontal"
            android:text="Create new group"
            android:textColor="@color/gray_1"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>