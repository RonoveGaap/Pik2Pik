        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_groups_item_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/border_radius_white_rectangle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.9"
            android:elevation="4dp"
            android:outlineProvider="bounds"
            >

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/my_groups_item_guideline_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/my_groups_item_guideline_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.35"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/my_groups_item_guideline_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.8"
                />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/my_groups_item_guideline_vertical_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/my_groups_item_guideline_vertical_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.67"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/my_groups_item_guideline_vertical_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.87"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/my_groups_item_guideline_vertical_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6"
                />


            <TextView
                android:id="@+id/my_groups_item_group_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_vertical"
                android:text="Group name"
                android:textColor="@color/black"
                android:textSize="28sp"
                app:layout_constraintBottom_toBottomOf="@id/my_groups_item_guideline_1"
                app:layout_constraintHeight_percent="0.8"
                app:layout_constraintLeft_toLeftOf="@id/my_groups_item_guideline_vertical_1"
                app:layout_constraintTop_toTopOf="@id/my_groups_item_guideline_1"
                app:layout_constraintWidth_percent="0.5" />

            <TextView
                android:id="@+id/my_groups_item_group_date"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="@id/my_groups_item_guideline_vertical_4"
                app:layout_constraintHeight_percent="0.8"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="@id/my_groups_item_guideline_3"
                app:layout_constraintBottom_toBottomOf="@id/my_groups_item_guideline_3"
                app:layout_constraintWidth_percent="0.5"
                android:textSize="18sp"
                android:text="01-01-2023"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/my_groups_download_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/my_groups_item_guideline_2"
                app:layout_constraintBottom_toBottomOf="@id/my_groups_item_guideline_2"
                app:layout_constraintLeft_toLeftOf="@id/my_groups_item_guideline_vertical_2"
                app:layout_constraintRight_toRightOf="@id/my_groups_item_guideline_vertical_2"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintWidth_percent="0.15"
                android:background="@drawable/orange_border_ripple">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/my_group_view_video_icon"
                    app:layout_constraintWidth_percent="0.7"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/my_groups_delete_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/my_groups_item_guideline_2"
                app:layout_constraintBottom_toBottomOf="@id/my_groups_item_guideline_2"
                app:layout_constraintLeft_toLeftOf="@id/my_groups_item_guideline_vertical_3"
                app:layout_constraintRight_toRightOf="@id/my_groups_item_guideline_vertical_3"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintWidth_percent="0.15"
                android:background="@drawable/white_border_ripple">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/my_groups_delete"
                    app:layout_constraintWidth_percent="0.7"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

