        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/groups_found_item_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/orange_gradient_button_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.9"
            android:elevation="4dp"
            android:outlineProvider="bounds"
            >

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/group_found_item_guideline_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/group_found_item_guideline_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.35"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/group_found_item_guideline_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.78"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/group_found_item_guideline_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.65"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/group_found_item_guideline_vertical_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/group_found_item_guideline_vertical_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95"
                />


            <TextView
                android:id="@+id/groups_found_list_item_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_vertical"
                android:text="GROUP NAME"
                android:textColor="@color/black"
                android:textSize="28sp"
                app:layout_constraintBottom_toBottomOf="@id/group_found_item_guideline_2"
                app:layout_constraintHeight_percent="0.7"
                app:layout_constraintLeft_toLeftOf="@id/group_found_item_guideline_vertical_1"
                app:layout_constraintTop_toTopOf="@id/group_found_item_guideline_2"
                app:layout_constraintWidth_percent="0.75" />

            <TextView
                android:id="@+id/groups_found_list_item_owner"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.3"
                app:layout_constraintLeft_toLeftOf="@id/group_found_item_guideline_vertical_1"
                app:layout_constraintTop_toTopOf="@id/group_found_item_guideline_3"
                app:layout_constraintBottom_toBottomOf="@id/group_found_item_guideline_3"
                app:layout_constraintWidth_percent="0.35"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:fontFamily="@font/montserrat_italic"
                android:textSize="12sp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/groups_found_list_item_size"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.3"
                app:layout_constraintLeft_toRightOf="@id/groups_found_list_item_owner"
                app:layout_constraintRight_toLeftOf="@id/groups_found_list_item_state"
                app:layout_constraintTop_toTopOf="@id/group_found_item_guideline_3"
                app:layout_constraintBottom_toBottomOf="@id/group_found_item_guideline_3"
                android:gravity="center_vertical|center_horizontal"
                android:text="1/32"
                android:fontFamily="@font/montserrat_bold_italic"
                android:textSize="12sp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/groups_found_list_item_state"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/montserrat_extra_bold"
                android:gravity="center_vertical|end"
                android:text="Starting..."
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/group_found_item_guideline_3"
                app:layout_constraintHeight_percent="0.3"
                app:layout_constraintLeft_toRightOf="@id/groups_found_list_item_size"
                app:layout_constraintRight_toRightOf="@id/group_found_item_guideline_vertical_3"
                app:layout_constraintTop_toTopOf="@id/group_found_item_guideline_3"
                app:layout_constraintWidth_percent="0.35" />

        </androidx.constraintlayout.widget.ConstraintLayout>

<!--    </androidx.cardview.widget.CardView>-->

</androidx.constraintlayout.widget.ConstraintLayout>