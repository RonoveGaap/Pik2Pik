<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.groupDetails.GroupDetailsFragment">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_group_details_guideline_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_group_details_guideline_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_group_details_guideline_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_group_details_guideline_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.26"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_group_details_guideline_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.32"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_group_details_guideline_6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_group_details_guideline_vertical_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_group_details_guideline_vertical_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_group_details_guideline_vertical_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>

    <ImageView
        android:id="@+id/group_details_back_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/fragment_group_details_guideline_1"
        app:layout_constraintBottom_toBottomOf="@id/fragment_group_details_guideline_1"
        app:layout_constraintLeft_toLeftOf="@id/fragment_group_details_guideline_vertical_2"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintDimensionRatio="1:0.7"
        android:src="@drawable/back_arrow"
        />

    <TextView
        android:id="@+id/group_details_title"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting room"
        app:layout_constraintBottom_toBottomOf="@id/fragment_group_details_guideline_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/fragment_group_details_guideline_2" />

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/group_details_group_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Group:"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_group_details_guideline_3"
        app:layout_constraintLeft_toLeftOf="@id/fragment_group_details_guideline_vertical_1"
        app:layout_constraintTop_toTopOf="@id/fragment_group_details_guideline_3" />

    <TextView
        android:id="@+id/group_details_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/fragment_group_details_guideline_3"
        app:layout_constraintBottom_toBottomOf="@id/fragment_group_details_guideline_3"
        app:layout_constraintLeft_toRightOf="@id/group_details_group_name_label"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_regular"
        />

    <TextView
        android:id="@+id/group_details_group_size_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Users:"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_group_details_guideline_4"
        app:layout_constraintLeft_toLeftOf="@id/fragment_group_details_guideline_vertical_1"
        app:layout_constraintTop_toTopOf="@id/fragment_group_details_guideline_4" />


    <TextView
        android:id="@+id/group_details_group_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/fragment_group_details_guideline_4"
        app:layout_constraintBottom_toBottomOf="@id/fragment_group_details_guideline_4"
        app:layout_constraintLeft_toRightOf="@id/group_details_group_size_label"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_regular"
        />


    <!--    <TextView-->
<!--        android:id="@+id/group_details_guests_count"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintTop_toTopOf="@id/fragment_group_details_guideline_2"-->
<!--        app:layout_constraintBottom_toBottomOf="@id/fragment_group_details_guideline_2"-->
<!--        app:layout_constraintLeft_toLeftOf="@id/fragment_group_details_guideline_vertical_1"-->
<!--        android:text="@string/group_details_member_count"-->
<!--        />-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/group_details_members_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/fragment_group_details_guideline_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.5"
        android:background="@drawable/border_radius_white_rectangle"
        />


    <TextView
        android:id="@+id/group_details_group_starting_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center_horizontal"
        android:text="Waiting for the host to start..."
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/fragment_group_details_guideline_6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/fragment_group_details_guideline_6"
        app:layout_constraintWidth_percent="0.7" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group_details_start_session_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/fragment_group_details_guideline_6"
        app:layout_constraintBottom_toBottomOf="@id/fragment_group_details_guideline_6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.1"
        android:background="@drawable/green_ripple"
        android:visibility="invisible">

        <TextView
            android:id="@+id/group_details_start_session_button_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center_vertical|center_horizontal"
            android:text="Start session"
            android:textColor="@color/orange_1"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>