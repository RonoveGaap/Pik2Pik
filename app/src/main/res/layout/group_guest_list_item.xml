<!--        </androidx.cardview.widget.CardView>-->

        <TextView
            android:id="@+id/group_guest_item_username"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/group_guest_item_guideline_1"
            app:layout_constraintBottom_toBottomOf="@id/group_guest_item_guideline_1"
            app:layout_constraintLeft_toLeftOf="@id/group_guest_item_guideline_vertical_1"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.6"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/group_guest_item_role"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="end|center_vertical"
            android:text="Guest"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/group_guest_item_guideline_2"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintRight_toRightOf="@id/group_guest_item_guideline_vertical_3"
            app:layout_constraintTop_toTopOf="@id/group_guest_item_guideline_2"
            app:layout_constraintWidth_percent="0.3" />

        <ImageView
            android:id="@+id/group_guest_item_host_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/group_guest_item_guideline_3"
            app:layout_constraintBottom_toBottomOf="@id/group_guest_item_guideline_3"
            app:layout_constraintLeft_toLeftOf="@id/group_guest_item_guideline_vertical_2"
            app:layout_constraintRight_toRightOf="@id/group_guest_item_guideline_vertical_2"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintDimensionRatio="1"
            android:src="@drawable/user_default_icon"
            android:visibility="invisible"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

